{
  "name": "monikai",
  "version": "1.0.0",
  "description": "MonikAI - Monika + AI",
  "main": "electron/main.js",
  "scripts": {
    "dev": "concurrently -k \"vite\" \"wait-on tcp:5173 && cross-env NODE_OPTIONS=--no-deprecation node electron/run-electron.js\"",
    "build": "vite build",
    "start": "node electron/run-electron.js",
    "dist": "npm run build && electron-builder"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@mediapipe/tasks-vision": "^0.10.22-rc.20250304",
    "clsx": "^2.1.0",
    "dayjs": "^1.11.19",
    "framer-motion": "^11.0.0",
    "lucide-react": "^0.300.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "pdfjs-dist": "^4.6.82",
    "socket.io-client": "^4.7.4",
    "tailwind-merge": "^2.2.0"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.17",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^40.1.0",
    "electron-builder": "^24.9.1",
    "postcss": "^8.4.35",
    "tailwindcss": "^3.4.1",
    "vite": "^7.3.1",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.monikai.app",
    "productName": "MonikAI",
    "files": [
      "dist/**/*",
      "electron/**/*",
      "backend/**/*"
    ],
    "directories": {
      "buildResources": "assets",
      "output": "dist_electron"
    },
    "win": {
      "target": "portable",
      "icon": "build/icon.png",
      "forceCodeSigning": false
    }
  }
}
